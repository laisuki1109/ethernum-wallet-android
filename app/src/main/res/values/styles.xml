<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarStyle.Light" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
        <item name="android:actionMenuTextColor">@color/colorBlack</item>
        <item name="actionMenuTextAppearance">@style/Toolbar.Title</item>
        <item name="android:actionMenuTextAppearance">@style/Toolbar.Title</item>
        <item name="toolbarNavigationButtonStyle">@style/navButtonStyle</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="navButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:maxButtonHeight" tools:targetApi="n">48dp</item>
    </style>

    <!--    Text Field-->
    <style name="EntryBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/selector_text_input_field</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <style name="EntryBox.Error" parent="EntryBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/selector_text_input_field</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">@color/colorGrey</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="endIconTint">@color/colorPrimary</item>
    </style>

    <style name="EntryBoxTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Button-->
    <style name="PrimaryButton">
        <item name="android:background">@drawable/bg_primary_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingHorizontal">@dimen/size_small</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:background">@drawable/bg_accent_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingHorizontal">@dimen/size_small</item>
    </style>

    <!--    Text-->
    <style name="BaseText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextRegular16dp" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextRegular12dp" parent="BaseText">
        <item name="android:textSize">@dimen/font_size_smaller</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>